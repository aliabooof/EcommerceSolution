
@{
    ViewData["Title"] = "Account Confirmed";
    Layout = "~/Views/Shared/_auth.cshtml";
}


<div class="max-w-md w-full space-y-8 bg-white p-8  ">
    <div class="text-center">
        <div class="rounded-full bg-green-100 p-3 mx-auto w-16 h-16 flex items-center justify-center">
            <i class="fas fa-check text-2xl text-green-600"></i>
        </div>
        <h2 class="mt-6 text-2xl font-bold text-gray-900">Account confirmed!</h2>
        <p class="mt-4 text-gray-600">
            Your email has been verified successfully. You can now sign in to your account.
        </p>
        <div class="mt-8">
			<a asp-action="Login" asp-controller="Account"
               class="inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                Sign in now
            </a>
        </div>
    </div>
